{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts"
    ],
    "rootDir": "src",
    "jsx": "react-jsx",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@inventory-platform/ui": ["../../shared/ui/src/index.ts"],
      "@inventory-platform/store": ["../../shared/store/src/index.ts"],
      "@inventory-platform/api": ["../../shared/api/src/index.ts"],
      "@inventory-platform/types": ["../../shared/types/src/index.ts"]
    }
  },
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "references": [
    {
      "path": "../../shared/types/tsconfig.lib.json"
    },
    {
      "path": "../../shared/api/tsconfig.lib.json"
    },
    {
      "path": "../../shared/ui/tsconfig.lib.json"
    },
    {
      "path": "../../shared/store/tsconfig.lib.json"
    }
  ]
}
