{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "module": "esnext",
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "paths": {
      "@inventory-platform/api": ["../../shared/api/src/index.ts"],
      "@inventory-platform/types": ["../../shared/types/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../api/tsconfig.lib.json"
    },
    {
      "path": "../types/tsconfig.lib.json"
    }
  ]
}
